<atv  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../../atv.xsd">
    <body>
        <listWithPreview id="simpleHeader">
            <header>
                <simpleHeader>
                    <title>Dynamic Image Header</title>
                </simpleHeader>
            </header>
            <menu>
                <sections>
                    <menuSection>
                        <items>
                            <oneLineMenuItem id="none" onSelect="atv.loadURL('https://samples-appletv.shea.nz/xml/headers/dynamicImageHeader/none.xml')">
                                <label>None</label>
                            </oneLineMenuItem>
                            <oneLineMenuItem id="left" onSelect="atv.loadURL('https://samples-appletv.shea.nz/xml/headers/dynamicImageHeader/left.xml')">
                                <label>Left</label>
                            </oneLineMenuItem>
                            <oneLineMenuItem id="center" onSelect="atv.loadURL('https://samples-appletv.shea.nz/xml/headers/dynamicImageHeader/center.xml')">
                                <label>Center</label>
                            </oneLineMenuItem>
                            <oneLineMenuItem id="right" onSelect="atv.loadURL('https://samples-appletv.shea.nz/xml/headers/dynamicImageHeader/right.xml')">
                                <label>Right</label>
                            </oneLineMenuItem>
                        </items>
                    </menuSection>
                </sections>
            </menu>
        </listWithPreview>
    </body>
</atv>